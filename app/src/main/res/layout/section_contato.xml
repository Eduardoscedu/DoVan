<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <EditText android:id="@+id/etContatoNome" android:hint="Contato de emergência - Nome" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etContatoFone" android:hint="Telefone (DDD + número)" android:inputType="phone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnSalvarContato" android:text="Salvar contato" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
</LinearLayout>
